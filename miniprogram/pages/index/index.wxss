.news{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  min-height: 200rpx;
}

.news_list{
  width: 100%;
}

.news_card{
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx 20rpx 30rpx 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 2rpx 2rpx 10rpx 2rpx #ddd;
  min-height: 450rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.news_pic{
  margin-top: 10px;
  height: 300rpx;
  width: 650rpx;
}

.title{
  font-weight: bold;
  justify-content: center;
}